! ~/.Xresources
! Increase or decrease DPI to match your desired scale. 96 is “normal” DPI;
! 192 is roughly 2× scaling, 144 ~1.5×, etc.
Xft.dpi: 192

! Enable font antialiasing
Xft.antialias: 1

! Hinting (0=none, 1=slight, 2=medium, 3=full)
Xft.hinting: 1

! Hint style can be hintnone, hintslight, hintmedium, or hintfull
Xft.hintstyle: hintslight

! Subpixel layout: rgb (LCDs), bgr, vrgb, vbgr, none
Xft.rgba: rgb

! (Optional) Xft.lcdfilter can improve subpixel rendering if you like
Xft.lcdfilter: lcddefault

! (Optional) You can also set cursor size for HiDPI
Xcursor.size: 32

