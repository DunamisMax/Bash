#!/usr/bin/env bash
# Merge the 1080p Xresources
xrdb -merge ~/.Xresources-1080p

# GTK scaling for laptop (1Ã—)
if command -v xfconf-query >/dev/null 2>&1; then
    xfconf-query --channel xsettings --property /Gdk/WindowScalingFactor --set 1
fi

# Qt scaling
export QT_AUTO_SCREEN_SCALE_FACTOR=0
export QT_SCALE_FACTOR=1

notify-send "autorandr switched" "Now using profile: laptopOnly"
