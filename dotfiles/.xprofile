#!/usr/bin/env bash
#
# ~/.xprofile
# This file is sourced when your X session starts (e.g., via LightDM).
# It unifies all HiDPI and font scaling settings in one place.

################################################################################
# 1) Merge Xresources (for Xft DPI, font rendering, etc.)
################################################################################
if [ -f ~/.Xresources ]; then
    xrdb -merge ~/.Xresources
fi

################################################################################
# 2) GTK scaling for XFCE (and other GTK apps)
################################################################################
# Sets the scale factor to 2 (about 2×) for high DPI displays.
# Adjust to 1.5 or 2.0 (only integer values are supported in older XFCE versions).
xfconf-query --channel xsettings --property /Gdk/WindowScalingFactor --set 2

################################################################################
# 3) Qt scaling
################################################################################
# **Manual 2× scaling** (disable auto, force 2×):
export QT_AUTO_SCREEN_SCALE_FACTOR=0
export QT_SCALE_FACTOR=2

################################################################################
# End of ~/.xprofile
################################################################################

